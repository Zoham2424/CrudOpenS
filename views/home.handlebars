<h1>Employee List</h1>

<!-- Button to View All Employees -->
<a href="/employees">
  <button>See All Employees</button>
</a>

<table>
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Department</th>
      <th>Start Date</th>
      <th>Job Title</th>
      <th>Salary</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    {{#each employees}}
    <tr>
      <td>{{employee.firstName}}</td>
      <td>{{employee.lastName}}</td>
      <td>{{employee.department}}</td>
      <td>{{employee.startDate}}</td>
      <td>{{employee.jobTitle}}</td>
      <td>{{employee.salary}}</td>
      <td>
        <a href="/updateEmployee/{{this._id}}">Update</a>
        <form action="/deleteEmployee/{{this._id}}" method="POST" >
          <button type="submit">Delete</button>
        </form>
      </td>
    </tr>

    {{/each}}
  </tbody>
</table>
